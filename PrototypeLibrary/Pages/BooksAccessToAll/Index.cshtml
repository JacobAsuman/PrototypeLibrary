@page
@model PrototypeLibrary.Pages.BooksAccessToAll.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Public Books</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div>
    <form>
        <p>
            Search Title:
            <input asp-for="searchTitle" class="form-control" />
            <input type="submit" value="Search" class="btn btn-dark"/>
        </p>
    </form>
</div>

<table class="table table-active">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonalList[0].BookID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalList[0].BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalList[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalList[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalList[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonalList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>

                    <a asp-page="./BankCard" asp-route-id="@item.Id">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
