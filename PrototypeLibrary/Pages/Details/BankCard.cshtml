@page
@model PrototypeLibrary.Pages.Details.BankCardModel
@{

    <h1>Enter Bank Card Details</h1>

    <br />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <input type="text" asp-for="CardNumber" />
                    <input type="text" asp-for="ExpDate" />
                    <input type="text" asp-for="CVV" />
                    <div class="input-group-append">
                        <button asp-page="./Money" type="submit" class="btn btn-primary">Enter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

}
